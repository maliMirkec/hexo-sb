include ../mixins/global

doctype html

if (theme && theme.site && theme.site.language)
  - var lang = theme.site.language
else if (config && config.language)
  - var lang = config.language
else
  - var lang = "en"

html(lang=lang)
  include ../partials/head
  body
    include ../partials/header
    if (isHome())
      - var main_class = " main--home"
    else if (isPost())
      - var main_class = " main--post"
    else if (isCategory())
      - var main_class = " main--category"
    else
      - var main_class = " main--page"

    - var main_sidebar = (page && page.sidebar) ? " main--sidebar" : "";

    div(class="main" + main_class + main_sidebar)
      block content
    include ../partials/footer
    include ../partials/starter-project
