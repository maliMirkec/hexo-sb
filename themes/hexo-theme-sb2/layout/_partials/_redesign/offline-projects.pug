if (site && site.pages)
  .block__grid.block__grid--beta
    .block__item.block__item--alpha
      include intro-projects
    each vpage, kpage in site.pages.toArray()
      if (vpage.highlighted && vpage.side)
        .block__item.poster.poster--alpha
          .poster__content
            if vpage.title
              h3.poster__title
                span= vpage.title
              if (vpage.description)
                p.poster__description= vpage.description
