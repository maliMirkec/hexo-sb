if (site && site.pages)
  .block__grid.block__grid--beta
    .block__item.block__item--alpha
      include intro-portfolio
    each vpage, kpage in site.pages.toArray()
      if (vpage.highlighted && vpage.portfolio)
        .block__item.poster.poster--alpha
          .poster__content
            if vpage.title
              h3.poster__title
                span= vpage.title
            if vpage.description
              .card__description!= vpage.description
            if (vpage.tags)
              ul.poster__list.poster__tags
                each tag in vpage.tags
                  li.poster__tag= tag

