if (theme && theme.sidebar && theme.sidebar.items)
  sidebar.sidebar
    .sidebar__inner
      if (theme.sidebar.title)
        h2.sidebar__title= theme.sidebar.title
        ul.list.list--beta
          each kitem, vitem in theme.sidebar.items
            li.list__item
              - var link_class = (page.permalink.indexOf(kitem) !== -1) ? " list__link--current" : "";
              if (kitem == "/" && theme && theme.site.logo)
                a(href=kitem, class="list__link list__link--logo " + link_class)
                  img(src=theme.site.logo, alt="Logo image with SB graphics.")
              else if (kitem.indexOf('//') !== -1)
                a(href=kitem, class="list__link" + link_class, target="_blank", rel="noreferrer")= vitem
              else
                a(href=kitem, class="list__link" + link_class)= vitem
      if (page && page.sidebar.paragraphs)
        ul.list.list--beta.list--bullets
          each p in page.sidebar.paragraphs
            li.list__item
              p= p
