{% assign card3List = collections[cards3.filter] %}

{% if card3List %}
  <section id="{{ cards3.filter }}" class="margin-top-alpha margin-bottom-alpha">
    <div class="wrapper wrapper--alpha grid padding">
      {% for card3 in card3List %}
        {% if cards3.limit and forloop.index > cards3.limit %}
          {% break %}
        {% endif %}
        <div class="card text-center">
          {% if card3.data.title %}
            <div class="padding">
              <h3 class="no-spacing"><a href="{{ card3.url }}">{{ card3.data.title }}</a></h3>
            </div>
          {% endif %}
          {% if card3.data.thumbnail %}
            <div class="padding">
              {% cldnry card3.data.thumbnail card3.data.title "552" "304" %}
            </div>
          {% endif %}
          {% if card3.data.categories %}
            <div class="padding">
              {% for category in card3.data.categories %}
                <span class="button button--small button--inverse">{{ category }}</span>
              {% endfor %}
              {% if cards3.cta %}
                <div class="margin-top">
                  <a href="{{ card3.url }}">{{ cards3.cta.title }}</a>
                </div>
              {% endif %}
            </div>
          {% endif %}
        </div>
      {% endfor %}
      {% if cards3.desc %}
        <div class="card card--flex text-center padding">
          <div class="margin-auto">
            <div class="copy">{{ cards3.desc | markdownify }}</div>
            {% if cards3.cta2 %}
              <div class="margin-top">
                <a class="button" href="{{ cards3.cta2.href }}">{{ cards3.cta2.title }}</a>
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    </div>
  </section>
{% endif %}
